version: "3"

services:
  pihole:
    container_name: node-exporter
    hostname: {{ ansible_facts.hostname }}-node-exporter
    image: prom/node-exporter:latest
    command:
      - '--path.rootfs=/host'
    network_mode: host
    pid: host
    volumes:
      - '/:/host:ro,rslave'
    restart: always
